<h1>お気に入り一覧</h1>

<table>
  <thead>
    <tr>
      <th>Tittle</th>
      <th>Image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorites.each do |favorite| %>

      <tr>
        <td><%= favorite.picture.title %></td>
        <td class="sample"><%= image_tag favorite.picture.image.url if favorite.picture.present?%></td>
        <td><%= favorite.user.name %></td>
        <td><%= link_to '詳細', picture_path(favorite.picture.id) %></td>
        <% if favorite.picture.user == current_user %>
        <td><%= link_to '編集', edit_picture_path(favorite.picture.id) %></td>
        <td><%= link_to '削除', picture_path(favorite.picture.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to '投稿一覧', pictures_path %>
